<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shop_row_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/shop_row_description_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_row_location_label_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_row_localization" />
        <TextView
            android:id="@+id/shop_row_location_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_row_radius_label_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_row_radius" />
        <TextView
            android:id="@+id/shop_row_radius_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"/>
    </LinearLayout>

</LinearLayout>